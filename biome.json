{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.yarn",
      "!**/node_modules",
      "!**/coverage",
      "!**/esm",
      "!**/dist"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": ["**/package.json"],
      "formatter": {
        "lineWidth": 1
      }
    },
    {
      "includes": ["**/src/**/*.test.ts", "**/src/**/__mocks__/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noImplicitAnyLet": "off",
            "noExplicitAny": "off"
          }
        }
      }
    }
  ]
}
