{
  "name": "@side/fortifyjs",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "https://github.com/reside-eng/fortifyjs.git",
  "description": "A platform-agnostic library for generating security headers for your web application.",
  "author": "Side Platform Engineering",
  "license": "MIT",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ignore-pattern='!.eslintrc.js' --ext .ts,.js",
    "types": "tsc --noEmit",
    "test": "jest",
    "test:cov": "yarn test --coverage --silent",
    "build": "rimraf dist/* && tsc --declaration --declarationDir dist",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "prettier": "@side/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@side/commitlint-config": "0.1.10",
    "@side/eslint-config-base": "0.13.4",
    "@side/eslint-config-jest": "0.3.16",
    "@side/prettier-config": "0.0.0",
    "@tsconfig/node16": "1.0.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "prettier": "2.6.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  }
}
